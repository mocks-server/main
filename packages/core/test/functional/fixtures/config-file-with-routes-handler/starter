#!/usr/bin/env node
"use strict";

const { Core } = require("@mocks-server/core");

const handleError = (error) => {
  console.error(`Error: ${error.message}`);
  process.exitCode = 1;
};

const start = () => {
  try {
    const mocksServer = new Core();

    return mocksServer.start().catch(handleError);
  } catch (error) {
    return handleError(error);
  }
};

start();
